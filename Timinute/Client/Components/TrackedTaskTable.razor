<div class="container">
    <div class="row">
        <h3>Tracked Task Table</h3>
        <p>
            @exceptionMessage
        </p>
    </div>

    @foreach (var trackedTaskPair in TrackedTasksDictionary)
    {
        var time = new TimeSpan();

        <div class="row mt-2">
            <div class="card" style="padding-right: 0px;padding-left: 0px;">
                <h5 class="card-header">@trackedTaskPair.Key</h5>
                <div class="card-body">
                    <ul class="list-group list-group-flush">

                        @foreach (var trackedTask in trackedTaskPair.Value)
                        {
                            <li class="list-group-item">@trackedTask.Name</li>
                            time += trackedTask.Duration; 
                        }
                    </ul>
                </div>
                <div class="card-footer text-muted">
                    Total time: @time.ToString(@"hh\:mm\:ss")
                </div>
            </div>
        </div>
    }

</div>
